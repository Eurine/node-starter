{
  "compileOnSave": true,
  "include": [
    "index.js",
    "server.js",
    "routes/**/*",
    "models/**/*",
    "middleware/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@middlewares": ["middlewares/manual"],
      "@middlewares/*": ["middlewares/manual/*"],
      "@models": ["models"],
      "@models/*": ["models/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@config": ["config.js"]
    }
  }
}
